    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://asciimoon.com/about#webpage",
    "name": "About ASCIIMoon",
    "url": "https://asciimoon.com/about",
    "description": "ASCIIMoon tracks the moon's phases and uses ASCII art to create a basic visual representation of the moon's current appearance based on light percentage.",
    "keywords": "moon phases, ASCII moon, moon tracker, moon phase tracker, ASCII art, lunar phases, moon calendar, moon cycle, moon phase app, phase of the moon",
    "inLanguage": "en",
    "mainEntityOfPage": {
      "@type": "WebPage",
      "@id": "https://asciimoon.com/about"
    },
    "sameAs": ["https://github.com/Sean-93/asciimoon"],
    "publisher": {
      "@type": "Organization",
      "@id": "https://asciimoon.com/#website",
      "name": "ASCIIMoon",
      "url": "https://asciimoon.com/",
      "logo": {
        "@type": "ImageObject",
        "url": "https://asciimoon.com/asciimoon-logo.jpg",
        "width": 600,
        "height": 600
      }
    }
  }
